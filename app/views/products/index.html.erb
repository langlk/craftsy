<% content_for :page_header, "All Crafts" %>

<% if current_user && current_user.admin? %>
  <h4><%= link_to "Add a Craft", new_product_path %></h4>
<% end %>

<% if @products.any? %>
  <div class="products-list">
    <% @products.each do |product| %>
      <div class="product panel panel-default">
        <div class="panel-body">
          <h3><%= link_to product.name, product_path(product) %></h3>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>There are no products saved.</h3>
<% end %>
