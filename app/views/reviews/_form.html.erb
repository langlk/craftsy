<div class="form">
  <%= form_for [@product, @review] do |f| %>
    <div class="form-group">
      <%= f.label :rating %>
      <%= f.number_field :rating, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :comments %>
      <%= f.text_area :comments, class: "form-control" %>
    </div>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
